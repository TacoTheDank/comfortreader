<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/amplify_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_prompt_view_default_spacing"
        android:layout_marginRight="@dimen/default_prompt_view_default_spacing"
        android:layout_marginTop="@dimen/default_prompt_view_default_spacing"
        android:gravity="center"
        android:textSize="@dimen/default_prompt_view_default_text_size" />

    <TextView
        android:id="@+id/amplify_subtitle_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_prompt_view_default_spacing"
        android:layout_marginRight="@dimen/default_prompt_view_default_spacing"
        android:gravity="center"
        android:textSize="@dimen/default_prompt_view_default_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_prompt_view_default_spacing"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amplify_negative_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/default_prompt_view_default_button_height"
            android:gravity="center"
            android:textSize="@dimen/default_prompt_view_default_text_size" />

        <View
            android:layout_width="@dimen/default_prompt_view_default_spacing"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/amplify_positive_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="@dimen/default_prompt_view_default_button_height"
            android:gravity="center"
            android:textSize="@dimen/default_prompt_view_default_text_size" />

    </LinearLayout>

</LinearLayout>
